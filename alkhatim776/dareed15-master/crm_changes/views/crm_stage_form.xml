<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_stage_inherit" model="ir.ui.view">
        <field name="name">crm.stage.inherit</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
