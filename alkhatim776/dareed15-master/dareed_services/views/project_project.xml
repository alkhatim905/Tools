<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="editing_project_project_form_view" model="ir.ui.view">
        <field name="name">editing.project.project.form.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="hr_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allow_timesheets']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='allow_timesheets']" position="replace"/>
        </field>
    </record>

</odoo>
